<% include header %>
            <div id="principal"  class="row bg">
                <h1 class="title"> Relatório de demandas</h1>
                <div class="small-12 centered" id="orm">
				    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
				    <script type="text/javascript">    
				        google.load("visualization", "1", {packages:["corechart"]});
				        google.setOnLoadCallback(drawChart);
				        function drawChart() {
				            var data = google.visualization.arrayToDataTable([
				            ['Demandas', 'média'],
				            <% for (var d in params.demandas) { %>
				            ['<%= params.demands[d] %>', <%= params.demandas[d] %>],
				            <% } %>
				        ]);
				
				        var options = {
				            pieHole: 0.4,
				            is3D: true,
				            title: 'Demandas de atendimento pedagógico (%)',
				            vAxis: {title: 'Demandas',  titleTextStyle: {color: 'red'}}
				        };
				
				        var chart = new google.visualization.PieChart(document.getElementById('donutchart'));
				        chart.draw(data, options);
				      }
				    </script>
				    <script type="text/javascript">    
				        google.load("visualization", "1", {packages:["corechart"]});
				        google.setOnLoadCallback(drawChart);
				        function drawChart() {
				        	var data = google.visualization.arrayToDataTable([
				        	    ['Curso', 'Total Demandas'],
				        	    ['Administração', <%= params.cursos[0] %>],
				        	    ['Informática para Internet', <%= params.cursos[1] %>],
				        	    ['Manutenção e Suporte em Informática', <%= params.cursos[2] %>],
				        	    ['Informática (generalista)', <%= params.cursos[3] %>],
				        	    ['TADS', <%= params.cursos[4] %>],
				        	    ['REDES', <%= params.cursos[5] %>],
				        	    ['GESTÃO PÚBLICA', <%= params.cursos[6] %>],
				        	    ['COMEX', <%= params.cursos[7] %>]
				        	]);

				            var options = {
				              title: 'Demandas por Cursos'
				            };

				
				        var chart = new google.visualization.LineChart(document.getElementById('barschart'));
				        chart.draw(data, options);
				      }
				    </script>
				    <div id="donutchart" class="small-12 centralized" style="min-height:500px;"></div>
				    <div id="barschart" class="small-12 centralized" style="min-height:500px;"></div>
                </div>
            </div>                
            <% include footer %>
    </body>
</html>